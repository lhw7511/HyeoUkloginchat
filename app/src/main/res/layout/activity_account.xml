<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".account">
    <TextView
        android:id="@+id/account_name"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="이름"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="새로운 프로필사진을 선택해주세요."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:src="@drawable/signupprofile"
        android:id="@+id/account_profile"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <Button
        android:id="@+id/account_button_frofilechange"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="프로필 사진변경"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/account_comments"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="상태메세지"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="@android:color/holo_blue_light"
        android:id="@+id/account_dialong"
        android:layout_marginTop="30dp"
        android:text="상태 메세지 설정"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>